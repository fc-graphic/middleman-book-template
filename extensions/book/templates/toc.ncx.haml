!!! XML
%ncx{ :xmlns     => "http://www.daisy.org/z3986/2005/ncx/",
      :version   => "2005-1",
      "xml:lang" => "en" }
  %head
    %meta{:name => "dtb:uid", :content => book.info.pub_id }
  %docTitle
    %text= book.info.title.main
  %navMap
    - book.navmap.each do |item|
      %navPoint{ :id => item[:id], "playOrder" => item[:play_order] }
        %navLabel
          %text= item[:text]
        %content{:src => item[:src] }
